<form method="post" action="{{ path('app_domaine_delete', {'id': domaine.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce domaine ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ domaine.id) }}">
    <button class="btn btn-primary btn-fab btn-icon btn-round"><i class="tim-icons icon-trash-simple"></i></button>
</form>
