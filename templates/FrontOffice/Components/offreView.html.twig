          			<th>Candidat</th> 		
          							<th>datepostulation</th>
          							<th>datemodification</th>
  
                        									<th>details</th>
          							<th class="text-center"> status </th>
          						</tr>
          					</thead>
          					<tbody> {% for candidature in candidaturesAccepted %} <tr>
                    						                    							<td>{{ candidature.offre.titre }}
          							</td> 
                                	<td>{{ candidature.offre.recruteur }}
          							</td> 
          							<td>{{ candidature.candidat }}</td>	
          							</td>
          							<td>{{ candidature.datepostulation|date('Y-m-d H:i')  }}</td>
          							<td>{{ candidature.datemodification|date('Y-m-d H:i')  }}
          							</td>


                        			<td>{{ candidature.details }}
          														<td class="text-center">{{ candidature.status }}</td>
          						</tr> {% else %} <tr>
          							<td colspan="9">no records found</td>
          						</tr> {% endfor %} </tbody>
          				</table>
          			</div>
          		</div>
              </div>
          	</div><!-- End Portfolio Item -->


            <div class="row gy-4 portfolio-container">
          	  <div class="col-xl-15 col-md-20 portfolio-item filter-candidatures filter-rejected">
          		<div class="portfolio-wrap">
          			<a href="assets/img/portfolio/app-1.jpg" data-gallery="portfolio-gallery-app" class="glightbox"><img src="assets/img/portfolio/app-1.jpg" class="img-fluid" alt=""></a>
          			<div class="portfolio-info">
          				<h4><a href="portfolio-details.html" title="More Details">Candidatures Rejetées</a></h4>
          				<table class="table tablesorter " id="">
          					<thead class=" text-primary">
          						<tr>
                      <th>Titre</th>
          		          							<th>Recruteur</th>
          			<th>Candidat</th> 		
          							<th>datepostulation</th>
          							<th>datemodification</th>
  
                        									<th>details</th>
          							<th class="text-center"> status </th>
          						</tr>
          					</thead>
          					<tbody> {% for candidature in candidaturesRejected %} <tr>
                    						                    							<td>{{ candidature.offre.titre }}
