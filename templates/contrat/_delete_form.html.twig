<form method="post" action="{{ path('app_contrat_delete', {'id': contrat.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet contrat ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat.id) }}">
    <button class="btn btn-primary btn-fab btn-icon btn-round"><i class="tim-icons icon-trash-simple"></i></button>
</form>
